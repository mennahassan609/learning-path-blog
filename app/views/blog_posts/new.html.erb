<h1>New Blog Post</h1>
<%= form_with model: @blog_post do |form| %>
  <% if form.object.errors.any? %>
    <div>
      <% form.object.errors.full_messages.each do |message| %>
        <div><%= message %></div>
      <% end %>
    </div>
  <% end %>

  <div>
    <%= form.label :title %>
    <%= form.text_field :title %>
  </div>

  <div>
    <%= form.label :body %>
    <%= form.text_area :body %>
  </div>
  <div>
    <%= form.label :author %>
    <%= form.text_area :author %>
  </div>
  <div>
    <%= form.label :tags %>
    <%= form.text_area :tags %>
  </div>
  <div>
  <%= form.label :comments %>
  <%= form.text_area :comments %>
</div>
  
    <%= form.submit "Create Blog Post" %>
<% end %>
